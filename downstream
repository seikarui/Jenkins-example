node('linux-slave') {
    stage('Downstream Job') {
        sh "echo Downstream job."
        sh "echo package number is ${env.PACKAGE_NUMBER}"
        sh "echo Downstream success."
    }

    stage('deploy') {
    parallel linux: {
            node('linux-slave') {
                sh 'echo parallel 1'
                sh 'sleep 20'
                sh 'echo finish parallel 1.'
            }
        },
        windows: {
            node('linux-slave') {
                sh 'echo parallel 2'

            }
        }

    }

}